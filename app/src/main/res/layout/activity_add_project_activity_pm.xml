<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ProjectManager.Activities.AddProjectActivityPM">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Add Activity"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:textColor="#FF000000"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Activity Name"
        android:textSize="15sp"
        android:textColor="#000"/>

    <AutoCompleteTextView
        android:id="@+id/searchviewaddact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:completionThreshold="1"
        />

    <Button
        android:id="@+id/btn_startDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_btn_actsdate"
        android:layout_margin="10dp"
        android:text="Activity Start Date"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btn_endDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_btn_actsdate"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Activity End Date"
        android:textAllCaps="false"
        />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_actadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_done_white_58dp"
            android:backgroundTint="#0277BD"/>
</LinearLayout>