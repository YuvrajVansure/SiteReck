<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectManager.Activities.EditProfileInfo_PM">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_middle"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin">
        <LinearLayout
            android:padding="@dimen/spacing_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile Information "
                android:layout_margin="@dimen/spacing_middle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/etename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:hint="Name"/>
            <EditText
                android:id="@+id/etecont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:hint="contact"/>
            <EditText
                android:id="@+id/eteemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                android:hint="E-mail"/>
            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="@dimen/spacing_middle"
                android:background="#2E6380"
                android:text=" Update "
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>