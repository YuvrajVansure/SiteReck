<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProjectManager.Activities.Profile_PM">
   <include layout="@layout/custom_toolbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        android:padding="15dp"
        android:paddingBottom="10dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
            android:id="@+id/pm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text=""
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
             android:drawableStart="@drawable/ic_person_blue_24dp"
            />

            <TextView
                android:id="@+id/pm_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:text=""
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawableTint="#84CBE4"/>

            <TextView
                android:id="@+id/pm_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="15dp"
                android:text=""
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:drawableStart="@drawable/ic_phone_android_navyblue_24dp"
                android:backgroundTint="#84CBE4"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="2">
                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginStart="5dp"
                    android:text="Edit"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_ripple_cancel"
                    android:textColor="#000"/>
                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_marginEnd="5dp"
                    android:text="Log-Out"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textAllCaps="false"
                    android:background="@drawable/custom_ripple_cancel"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>