<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Construction_Manager.Activities.request_dashboard_cm">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:elevation="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:background="@drawable/ic_progress"
                android:id="@+id/btn_ongoing" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#9CCC65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ongoing Project Req"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:elevation="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:layout_width="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="100dp"
                android:background="@drawable/icon_acti"
                android:id="@+id/btn_project_wise" />
            <TextView
                android:layout_gravity="center_horizontal"
                android:textColor="#9CCC65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Wise Request"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>