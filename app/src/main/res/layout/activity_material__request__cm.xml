<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Construction_Manager.Activities.material_Request_CM">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_projecttitle_cm"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg"
            >
            <TextView
                android:id="@+id/tv_projecttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Material Request"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textSize="25sp"
                android:textColor="#FAF6F6"
                android:textStyle="bold|italic"
                android:layout_alignParentTop="true"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Material Name">

                <EditText
                    android:id="@+id/etmaterial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="5dp"
                    android:layout_weight="1" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="#333"
                >

               <Button
                   android:id="@+id/etdate"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:hint="Required Date - yy/mm/dd"
                   android:textSize="20sp"
                   android:textColor="#F6F4F4"
                   android:drawablePadding="5dp"
                   android:background="@drawable/custom_ripple_cancel"
                   android:layout_weight="1"
                   style="@style/Widget.AppCompat.Button.Borderless.Colored"
                   android:textAllCaps="false"
                   />


            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btsubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#EF66BBEC"
            android:textColor="#f5f2f2"
            android:clickable="true"
            android:text="Submit"/>

        <Button
            android:id="@+id/btn_show_request"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#EF66BBEC"
            android:clickable="true"
            android:textColor="#f5f2f2"
            android:text="Show All Requests"/>
    </LinearLayout>

</LinearLayout>