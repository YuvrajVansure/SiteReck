<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectManager.Activities.PmProjectList">
<androidx.cardview.widget.CardView
    android:id="@+id/card_toolbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    app:cardElevation="15dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:text="Project List"
        android:textColor="#FF000000"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
</androidx.cardview.widget.CardView>
    <TextView
        android:visibility="gone"
        android:id="@+id/textemptyprojectlist"
        android:layout_below="@id/card_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium"
        android:gravity="center"
        android:background="@color/grey_10"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Header"
        android:text="  You Dont Have Any Projects Yet!!! Try Creating One"/>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/container_projList"
        android:layout_marginTop="2dp"
        android:layout_below="@id/card_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:padding="@dimen/spacing_medium"
            android:id="@+id/rec_projList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_addproject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_add_black_48dp"
        app:backgroundTint="#2979FF" />
</RelativeLayout>