<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Construction_Manager.Activities.dashboard_cm"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F3F1F1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bkg"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SITERECK"
            android:textSize="35dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#F5F8F5">

        </TextView>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/cd_project"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    android:outlineAmbientShadowColor="@color/purple"
                    android:outlineSpotShadowColor="@color/purple"

                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_project"
                            android:layout_width="100dp"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PROJECT"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    android:outlineSpotShadowColor="@color/purple"
                    android:outlineAmbientShadowColor="@color/purple"
                    android:id="@+id/cd_request"
                    android:layout_margin="5dp"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_activity"
                            android:layout_width="100dp"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REQUEST"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>



                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:paddingTop="40dp">

                <androidx.cardview.widget.CardView

                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    android:layout_margin="5dp"
                    android:outlineSpotShadowColor="@color/purple"
                    android:outlineAmbientShadowColor="@color/purple"
                    android:id="@+id/cd_activity"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"

                            android:src="@drawable/icon_request"
                            android:layout_width="100dp"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTIVITY"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    android:id="@+id/cd_report"
                    android:layout_margin="5dp"
                    android:outlineSpotShadowColor="@color/purple"
                    android:outlineAmbientShadowColor="@color/purple"
                    >
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_progress"
                            android:layout_width="100dp"
                            android:layout_height="70dp" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REPORT"
                            android:textStyle="bold"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>